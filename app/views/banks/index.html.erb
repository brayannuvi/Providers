<header class=' p-3'>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
        <div class="navbar-nav">
            <%= link_to t('headers.dashboard'), pages_dashboard_path, class: 'nav-link' %>
            <%= link_to t('activerecord.models.suppliers'), suppliers_path, class: 'nav-link' %>
        </div>
    
        <h2><%= t('activerecord.models.banks') %></h2>
    
        <%= button_to 'logout', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        </div>
    </nav>
</header>
<div class='container-fluid'>
    <table class='table'>
    <th><%= t("activerecord.attributes.bank.name") %></th>
    <th></th>
    <th><%= link_to t('links.go_to_new_bank'), new_bank_path, class: 'btn btn-primary' %></th>
    <% @banks.each do |bank| %>
        <tr>
            <td><%= link_to bank.name, edit_bank_path(bank.id) %><td>
            <td><%= link_to t("links.destroy"), bank, data: { turbo_method: :delete, turbo_confirm: t("turbo_confirm.confirm_delete") } %><td>
        </tr>
    <% end %>
    </table>
    <%= will_paginate @bank %>
</div>